<core:FragmentDefinition height="100%"
    xmlns:u="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog title="Add new log" draggable="true" resizable="true">
        <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
            <form:content>
                <Label text="Chooose video to upload"/>
                <u:FileUploader tooltip="Upload" uploadComplete="handleNewLog" uploadOnChange="true"/>
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button text="Submit" press="handleLogSubmited" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="closeDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>