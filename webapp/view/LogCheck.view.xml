<mvc:View controllerName="fmi.Eco.controller.LogCheck" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:x="fmi.Eco.lib.controls">
    <Page showHeader="false">
        <content>
            <IconTabBar>
                <items>
                    <IconTabFilter showAll="true" count="50" text="Eco-Logs" key="any" />
                    <IconTabSeparator />
                    <IconTabFilter icon="sap-icon://accept" iconColor="Positive" count="10" text="Approved" key="approved" />
                    <IconTabFilter icon="sap-icon://pending" iconColor="Critical" count="20" text="Pending" key="pending" />
                    <IconTabFilter icon="sap-icon://decline" iconColor="Negative" count="30" text="Rejected" key="rejected" />
                </items>
            </IconTabBar>
            <ScrollContainer vertical="false" horizontal="true" height="calc(100vh - 15px)">
                <Table items="{local>/logs}" autoPopinMode="true">
                    <columns>
                        <Column importance="High">
                            <Text text="Video" />
                        </Column>
                        <Column hAlign="End" importance="Medium">
                            <Text text="Messages" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <FlexBox height="25vh" renderType="Bare">
                                    <x:Video class="vjs-fill" url="{local>url}" contentType="{local>contentType}" />
                                </FlexBox>
                                <Button type="Transparent" icon="sap-icon://discussion" press="">
                                    <customData>
                                        <core:CustomData key="docId" value="{local>id}" />
                                    </customData>
                                </Button>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>