<mvc:View controllerName="fmi.Eco.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core">
    <Page showHeader="false">
        <content>
            <MessagePage showHeader="false" visible="{= ${local>/userLogs}.length === 0 }" icon="sap-icon://e-care" text="Create your first Eco-Log!" description="Use the button below."/>
            <f:GridList headerText="My Logs" visible="{= ${local>/userLogs}.length > 0 }" items="{local>/userLogs}">
                <f:customLayout>
                    <grid:GridBoxLayout boxWidth="17.5rem" />
                </f:customLayout>
                <f:GridListItem>
                    <VBox renderType="Bare" height="100%" justifyContent="SpaceBetween">
                        <layoutData>
                            <FlexItemData growFactor="1" shrinkFactor="0" />
                        </layoutData>
                        <VBox renderType="Bare" class="sapUiSmallMargin">
                            <HBox justifyContent="SpaceBetween">
                                <core:Icon src="sap-icon://e-leaf" size="2.625rem" color="Default" class="sapUiTinyMarginBottom" />
                                <ObjectStatus text="Log confirmed" state="Success" />
                            </HBox>
                            <Title text="Log" wrapping="true" />
                            <Label text="19.10.2020" wrapping="true" class="sapUiTinyMarginBottom" />
                            <Text text="Your Eco-Log has been confirmed. 20 Points have been awared to your account" wrapping="true" />
                        </VBox>
                        <OverflowToolbar design="Solid">
                            <ToolbarSpacer />
                            <Button enabled="false" icon="sap-icon://edit" type="Transparent" />
                            <Button enabled="false" icon="sap-icon://delete" type="Transparent" />
                            <Button enabled="false" icon="sap-icon://message-information" type="Transparent" />
                        </OverflowToolbar>
                    </VBox>
                </f:GridListItem>
            </f:GridList>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized" text="New Log" press="handleOpenLogDialog"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>